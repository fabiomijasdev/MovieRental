<Window x:Class="MovieRentalUI.Views.AddCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieRentalUI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="Add new customer">

    <Grid Background="#F5F5F5">
        <Label Content="Name" Margin="70,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" FontStyle="Normal"  RenderTransformOrigin="1.315,1.102"/>
        <TextBox Height="30"  Width="200" Text="{Binding Name}" Margin="70,92,530,0" VerticalAlignment="Top"/>
        <Label Content="Birthday" Margin="70,147,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" FontStyle="Normal"  RenderTransformOrigin="1.315,1.102"/>
        <TextBox Height="30" Width="200" Text="{Binding Birthday}" Margin="70,195,530,0" VerticalAlignment="Top"/>
        <Button Height="30" Width="200" Command="{Binding AddCustomerCommand}" Content="Add Customer" Margin="248,313,352,91"/>
    </Grid>
</Window>
